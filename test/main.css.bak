*
{
	font-family: sans-serif;
	font-size: 12px;
}
#main-area
{
	width:100%;
	margin: 0;
	
}

#menu-area
{
	position: absolute;
	width: 222px;
	top:0px;
	left:0px;
	background-color:#f0f8ff;
}

#content-area
{
	position: absolute;
	width: 100%;
	top:0px;
	left:228px;
	padding:0;
	background-color:#fff8f0;
}

#content
{
	margin:10px;
	width: 100%;
	height:100%;
}

.menu_header
{
	padding-top:8px;
	width: 220px;
	height: 24px;
	text-align: center;
	font-weight:bold;
	vertical-align: center;
	border: 1px solid #222;
	background-color:#333333;
	color:#ffffff;
}

.menu_cell
{
	padding-top:8px;
	width: 220px;
	height: 24px;
	text-align: center;
	vertical-align: center;
	border: 1px solid #444;
	background-color:#e0e8ee;
}

.form-elem
{
	width:220px;
	margin-left:8px;
	text-align: right;
}


